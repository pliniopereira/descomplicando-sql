# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true

# Jupyter Notebook files
[*.ipynb]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

# SQL files
[*.sql]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{toml,cfg,ini}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Databricks specific files
[*.{scala,sc}]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# XML files
[*.xml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# HTML files
[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# CSS files
[*.css]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

# R files
[*.{r,R}]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
